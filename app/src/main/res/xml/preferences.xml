<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            app:key="compass_category"
            app:title="@string/compass"
            app:icon="@drawable/ic_compass">

        <SwitchPreferenceCompat
                app:key="true_north"
                app:title="@string/true_north"
                app:summary="@string/true_north_summary"
                app:defaultValue="false" />

        <SwitchPreferenceCompat
                app:key="haptic_feedback"
                app:title="@string/haptic_feedback"
                app:summary="@string/haptic_feedback_summary"
                app:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
            app:key="display_category"
            app:title="@string/display"
            app:icon="@drawable/ic_display_settings">

        <ListPreference
                app:key="night_mode"
                app:title="@string/night_mode"
                app:entries="@array/night_mode_entries"
                app:entryValues="@array/night_mode_values"
                app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
            app:key="about_category"
            app:title="@string/about"
            app:icon="@drawable/ic_about">

        <Preference
                app:key="author"
                app:title="@string/author"
                app:summary="@string/author_name">
            <intent
                    android:action="android.intent.action.VIEW"
                    android:data="mailto:philipp.bobek@mailbox.org" />
        </Preference>

        <Preference
                app:key="license"
                app:title="@string/license"
                app:summary="@string/license_name">
            <intent
                    android:action="android.intent.action.VIEW"
                    android:data="https://www.gnu.org/licenses/gpl-3.0.txt" />
        </Preference>

        <Preference
                app:key="source_code"
                app:title="@string/source_code"
                app:summary="@string/source_code_name">
            <intent
                    android:action="android.intent.action.VIEW"
                    android:data="https://github.com/Kr0oked/Compass" />
        </Preference>

        <Preference
                app:key="version"
                app:title="@string/version"
                app:selectable="false" />

    </PreferenceCategory>

</PreferenceScreen>
